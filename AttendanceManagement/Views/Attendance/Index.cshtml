@model IEnumerable<AttendanceManagement.Models.Course>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<link href="~/Content/Attendance.css" rel="stylesheet" />
