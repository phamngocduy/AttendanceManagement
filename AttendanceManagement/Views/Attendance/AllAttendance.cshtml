@model List<AttendanceManagement.Models.DasboardAttendanceView>
@if (Model.Count > 0) { 
	<div class="card card-outline-primary">
		<div class="card-header"><h3 style="color:white"><strong> TOTAL ATTENDANCE</strong></h3></div>
		<div class="card-body">
			<div class="table-responsive m-t-40">
				<table class="table table-bordered table-striped table-hover js-basic-example dataTable">
					<thead>
						<tr>
							<th>MSSV</th>
							<th>Name</th>
							<th>Total attend</th>
							<th>Total point</th>
							@for (int i =0;i< 1 ;i++)
							{
								var model = Model[i];
								foreach (var item in model.Attendance)
								{
									<th>@item.Date.ToShortDateString()</th>
								}
							}
						</tr>
						
					</thead>
					<tfoot>
						<tr>
							<th>MSSV</th>
							<th>Name</th>
							<th>Total attend</th>
							<th>Total point</th>
							@for (int i = 0; i < 1; i++)
							{
								var model = Model[i];
								foreach (var item in model.Attendance)
								{
									<th>@item.Date.ToShortDateString()</th>
								}
							}
						</tr>
						</tfoot>
					<tbody>
						@foreach (var item in Model)
						{
						<tr>
							<th>@item.studentID</th>
							<th>@item.studentName</th>
							<th align="center">10/13</th>
							<th align="center">10</th>
							@foreach (var i in item.Attendance)
							{
								<th>@i.Status</th>
							}
							@*<th><abbr title="+2"><input type="checkbox" checked disabled /></abbr></th>
							<th><abbr title="-3"><input type="checkbox" checked disabled /></abbr></th>
							<th><abbr title="+1"><input type="checkbox" checked disabled /></abbr></th>
							<th><abbr title="0"><input type="checkbox" unchecked disabled /></abbr></th>
							<th><abbr title="+6"><input type="checkbox" checked disabled /></abbr></th>
							<th><abbr title="+2"><input type="checkbox" unchecked disabled /></abbr></th>
							<th><abbr title="-3"><input type="checkbox" checked disabled /></abbr></th>
							<th><abbr title="+1"><input type="checkbox" checked disabled /></abbr></th>
							<th><abbr title="0"><input type="checkbox" unchecked disabled /></abbr></th>
							<th><abbr title="+6"><input type="checkbox" checked disabled /></abbr></th>
							<th><abbr title="+2"><input type="checkbox" checked disabled /></abbr></th>
							<th><abbr title="-3"><input type="checkbox" checked disabled /></abbr></th>
							<th><abbr title="+1"><input type="checkbox" checked disabled /></abbr></th>*@
						</tr>
						}
				
					</tbody>
				</table>
			</div>
		</div>
	</div>
}