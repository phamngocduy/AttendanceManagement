@model IEnumerable<WebApplication.Models.FacultyViewModel>
@{
				/**/

				ViewBag.Title = "FacultyIndex";
				Layout = "~/Views/Shared/_LayoutTable.cshtml";
				int i = 1;
}
<div class="col-md-12 col-sm-12 col-xs-12">
	<div class="x_panel">
		<div class="x_title">

			<div class="row">
				<h2>Faculty list</h2>
			</div>
			<div class="row" style="text-align:center">
				<div class="col-lg-1">
					<input type="button" style="width:150px" class="btn btn-default" value="Create faculty" onclick="Createfaculty()" />
				</div>

			</div>
			<ul class="nav navbar-right panel_toolbox">
				<li>
					<a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
				</li>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
					<ul class="dropdown-menu" role="menu">
						<li>
							<a href="#">Settings 1</a>
						</li>
						<li>
							<a href="#">Settings 2</a>
						</li>
					</ul>
				</li>
				<li>
					<a class="close-link"><i class="fa fa-close"></i></a>
				</li>
			</ul>
			<div class="clearfix"></div>
		</div>
		<div class="x_content">
			<table id="datatable-buttons" class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>#</th>
						<th>Name</th>
						<th>Group Link</th>
						<th>Major</th>
						<th>Description</th>
					</tr>
				</thead>

				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@(i++)</td>
							<td>@item.Name</td>
							<td>@item.GroupLink</td>
							<td>
								@foreach (var major in item.Majors)
								{
								<ul>
									<li>
										@major.Name
									</li>
								</ul>
								}
							</td>
							<td>@item.Description</td>
						</tr>
					}


				</tbody>
			</table>
		</div>
	</div>
</div>

<!--Add group Owner-->
<div class="modal fade" id="myCreateFaculty" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Create Faculty</h4>
			</div>
			<div class="modal-body" id="ModalCreateFaculty">

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			</div>
		</div>

	</div>
</div>

<script>
	function Createfaculty() {
		var url = "/Attendance/CreateFaculty1";
		$("#ModalCreateFaculty").load(url, function () {
			$("#myCreateFaculty").modal("show");
		})
	}
</script>