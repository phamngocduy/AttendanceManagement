@model IEnumerable<WebApplication.Models.CourseMember>
@{

	ViewBag.Title = "ManageStudent";
	int i = 1;
}

<div class="col-md-12 col-sm-12 col-xs-12">
	<div class="x_panel">
		<div class="x_title">
			<div class="row">
				<h2>Student List</h2>
			</div>
			<div class="row" style="text-align:center">
				<div class="col-lg-2 m-t-xl">
					<input type="button" value="Add Student" style="margin-left: 15px;width:150px" class="btn btn-default" onclick="AddStudent()" />
				</div>
			</div>
			<ul class="nav navbar-right panel_toolbox">
				<li>
					<a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
				</li>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
					<ul class="dropdown-menu" role="menu">
						<li>
							<a href="#">Settings 1</a>
						</li>
						<li>
							<a href="#">Settings 2</a>
						</li>
					</ul>
				</li>
				<li>
					<a class="close-link"><i class="fa fa-close"></i></a>
				</li>
			</ul>
			<div class="clearfix"></div>
		</div>
		<div class="x_content">

			<table id="datatable-buttons" class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>#</th>
						<th>Avatar</th>
						<th>Student ID</th>
						<th>Full Name</th>
						<th>DoB</th>
						<th>Email</th>
					

					</tr>
				</thead>

				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@(i++)</td>
							<td>
								<img src="data:image/png;base64,@item.Avatar" alt="Avatar" class="avatar" width="10%">
							</td>
							<td>@item.StudentID</td>
							<td>@item.Name</td>
							<td>@(item.DoB.HasValue ? item.DoB.Value.ToShortDateString() : string.Empty)</td>
							<td>@item.Email</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>


<!--Dialog edit class-->
<div class="modal fade" id="myAddStudent" role="dialog">
	<div class="modal-dialog">
		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">Edit <strong>Class</strong></h4>
			</div>
			<div class="modal-body" id="ModalAddStudent">

			</div>
		</div>
		<div class="modal-footer">
		</div>
	</div>
</div>

<script>
	function AddStudent() {
		var url = "/Attendance/AddStudent";
		$("#ModalAddStudent").load(url, function () {
			$("#myAddStudent").modal("show");
		})
	}
</script>
