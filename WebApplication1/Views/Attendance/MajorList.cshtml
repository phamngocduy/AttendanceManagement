@model IEnumerable<WebApplication.Models.Major>

@{
	ViewBag.Title = "MajorList";
	Layout = "~/Views/Shared/_LayoutTable.cshtml";
	int i = 1;
}

<div class="col-md-12 col-sm-12 col-xs-12">
	<div class="x_panel">
		<div class="x_title">

			<div class="row">
				<h2>Major list</h2>
			</div>
			<div class="row">
				<i type="button" class="glyphicon glyphicon-refresh" onclick="window.location='/Attendance/SynCourse'">	</i>
			</div>
			<div class="clearfix"></div>
		</div>
		<div class="x_content">

			<table id="datatable-buttons" class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>#</th>
						<th>Code</th>
						<th>Name</th>
						<th>Faculty</th>
					</tr>
				</thead>

				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@(i++)</td>
							<td>@item.Code</td>
							<td>@item.Name</td>
							<td>
								@if (item.Faculty != null)
								{
									@item.Faculty.Name
								}
						</td>
					</tr>
				}
				</tbody>
			</table>
		</div>
	</div>
</div>