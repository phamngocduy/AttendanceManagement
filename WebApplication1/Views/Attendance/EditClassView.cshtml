@model WebApplication.Models.Class

<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
<link href="~/Content/bootstrap-datepicker3.css" rel="stylesheet" />

<div>
	<form id="myForm" method="post" action="~/Attendance/Edit">
		<div class="row" hidden="hidden">
			<div class="col-md-4">
				<p class="clearfix">
					<i class="fa fa-book fa-2x text-primary pull-left"></i> Class name
				</p>
			</div>
			<div class="col-md-6">
				<input type="text" name="ID" class="form-control ui-wizard-content" value="@Model.ID">
			</div>
		</div>
		<div class="row">
			<div class="col-md-4">
				<p class="clearfix">
					<i class="fa fa-book fa-2x text-primary pull-left"></i> Class name
				</p>
			</div>
			<div class="col-md-6">
				<input type="text" name="ClassName" class="form-control ui-wizard-content" value="@Model.ClassName">
			</div>
		</div>
		<hr />
		<!--Calendar-->
		<div class="row">
			<div class="col-md-4">
				<p class="clearfix">
					<i class=" fa fa-calendar fa-2x text-primary pull-left"></i> Start date
				</p>
			</div>
			<div class="col-md-6">
				<div class="input-group date" data-date-format="dd.mm.yyyy">
					<input type="text" name="StartDate" class="form-control" value="@(Model.StartDate.HasValue ? Model.StartDate.Value.ToShortDateString() : string.Empty)">
					<div class="input-group-addon">
						<span class="glyphicon glyphicon-th"></span>
					</div>
				</div>
			</div>
		</div>

		<hr />
		<!--Description-->
		<div class="row">
			<div class="col-md-4">
				<p class="clearfix">
					<i class=" fa fa-pencil-square-o fa-2x text-primary pull-left"></i> Description
				</p>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<textarea class="form-control" rows="3" name="Description" value="@Model.Description"></textarea>
				</div>
			</div>
		</div>


		<hr />
		<!--Submit-->

		<div class="row">
			<div class="col-md-7 col-md-offset-5">
				<button type="button" class="btn btn-sm btn-primary ui-wizard-content"> Cancal</button>

				<input type="submit" class="btn btn-sm btn-primary ui-wizard-content" value="Edit" />
			</div>
		</div>
	</form>
</div>
<!--datepicker-->
<script>
	$('.input-group.date').datepicker({
		format: "dd/mm/yyyy",
		autoclose: true
	});
</script>