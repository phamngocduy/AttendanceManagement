@model WebApplication.Models.Member

@{
	ViewBag.Title = "AddStudent";
}

<h2 style="text-align:center">Add Student</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal" style="margin: 0 auto;text-align: center;">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<div class="form-group">
			@Html.LabelFor(model => model.ID, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10"  style="margin: 0 auto;">
				@Html.TextBoxFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" , @id="studentinput"} })
				@Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@ViewBag.mess
		</div>
		<div class="form-group"  style="margin: 0 auto;">
			<div class="col-md-offset-2 col-md-12">
				<input type="submit" value="Add" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div style="margin-left: 20px;bottom: 70px; position: absolute;">
	<a href="~/Student/Index/@Session["CourseID"]">Back to List</a>
</div>
