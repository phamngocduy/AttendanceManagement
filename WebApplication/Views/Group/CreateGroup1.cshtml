
@{
    ViewBag.Title = "CreateGroup1";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<link href="~/Content/newVersion/bootstrap-select.css" rel="stylesheet" />
<link href="~/Content/newVersion/sweetalert.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="block-header">
        <h2>GROUP MANAGEMENT</h2>
    </div>

    <!-- Vertical Layout -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        CREATE NEW GROUP
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);">Action</a></li>
                                <li><a href="javascript:void(0);">Another action</a></li>
                                <li><a href="javascript:void(0);">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <form>
                        <label for="group_name">Group Name</label>
                        <div class="form-group">
                            <div class="form-line">
                                <input type="text" id="group_name" class="form-control" placeholder="Enter your group name">
                            </div>
                        </div>
                        <label for="description">Description</label>
                        <div class="form-group">
                            <div class="form-line">
                                <input type="text" id="description" class="form-control" placeholder="Enter your description"></input>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-md-6">
                                <p>
                                    <b>Group Type</b>
                                </p>
                                <select class="form-control show-tick">
                                    <option>Public</option>
                                    <option>Private</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <b>Group Parent</b>
                                </p>
                                <select class="form-control show-tick">
                                    <option>Khoa công nghệ thông tin</option>
                                    <option>Khoa xây dựng</option>
                                    <option>Khoa quản trị kinh doanh</option>
                                    <option>Khoa ngoại ngữ</option>
                                </select>
                            </div>
                        </div>
                        <br>
                        <div class="js-sweetalert">
                            <button type="submit" class="btn btn-primary m-t-15 waves-effect" data-type="success">CREATE</button>
                            <button type="reset" class="btn btn-danger m-t-15 waves-effect">CLEAN</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/newVersion/sweetalert.min.js"></script>
