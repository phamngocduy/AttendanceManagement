
@{
    ViewBag.Title = "manageClass";
}
<link href="~/Content/Attendance.css" rel="stylesheet" />

<div class="fixed-header row">
    <div class="col-md-4 col-xs-6 header-left">
        <h3><strong>Capston Team 04</strong></h3>
    </div>
</div>
<div class="row">
    <!--Manage your classes-->
    <div class="col-sm-6 col-lg-3">
        <div class="widget">
            <a href="#">
                <div>
                    <span class="themed" style="background-color:#e74c3c !important;"> <i class="fa fa-book"></i></span>
                    <h4 class="widget-content">

                        <strong>Dashboard</strong><br />
                        <small>Your class list </small>
                    </h4>
                </div>
            </a>
        </div>
    </div>
    <!--Take Attendance-->
    <div class="col-sm-6 col-lg-3">
        <div class="widget">
            <a href="#">
                <div>
                    <span class="themed" style="background-color:#e67e22 !important;"> <i class="fa fa-pencil-square-o"></i></span>
                    <h4 class="widget-content">
                        Take
                        <strong>Attendance</strong><br />
                    </h4>
                </div>
            </a>
            <div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu4" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    Choose method
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu4">
                    <li><a href="#">Excel</a></li>
                    <li><a href="#">Website</a></li>
                    <li><a href="#">Barcode</a></li>
                    <li><a href="#">QR code</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!--Add Edit your Student-->
    <div class="col-sm-6 col-lg-3">
        <div class="widget">
            <a href="#">
                <div>
                    <span class="themed" style="background-color:#27ae60 !important"> <i class="fa fa-user"></i></span>
                    <h4 class="widget-content">
                        Add/Edit Your
                        <strong>Students</strong><br />
                        <small>Student Center</small>
                    </h4>
                </div>
            </a>
        </div>
    </div>
    <!--Record Grades-->
    <div class="col-sm-6 col-lg-3">
        <div class="widget">
            <a href="#">
                <div>
                    <span class="themed" style="background-color:#af64aa !important"> <i class="fa fa-check-square-o"></i></span>
                    <h4 class="widget-content">
                        Configuration
                        <strong>Class</strong><br />
                        <small>Configuration center</small>
                    </h4>
                </div>
            </a>
        </div>
    </div>
</div>



