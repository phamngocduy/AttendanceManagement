@model IEnumerable<WebApplication.Models.User>
@{

	ViewBag.Title = "ManageStudent";
	int i = 1;
}

	<div class="col-md-12 col-sm-12 col-xs-12">
		<div class="x_panel">
			<div class="x_title">
				<h2>Students <small>Users</small></h2>
				<ul class="nav navbar-right panel_toolbox">
					<li>
						<a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
					</li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
						<ul class="dropdown-menu" role="menu">
							<li>
								<a href="#">Settings 1</a>
							</li>
							<li>
								<a href="#">Settings 2</a>
							</li>
						</ul>
					</li>
					<li>
						<a class="close-link"><i class="fa fa-close"></i></a>
					</li>
				</ul>
				<div class="clearfix"></div>
			</div>
			<div class="x_content">
			
				<table id="datatable-buttons" class="table table-striped table-bordered">
					<thead>
						<tr>
							<th>#</th>
							<th>Avatar</th>
							<th>Student ID</th>
							<th>Full Name</th>
							<th>DoB</th>
							<th>Email</th>
							<th>Phone Number</th>
							<th>Check</th>

						</tr>
					</thead>

					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@(i++)</td>
								<td>
									<img src="data:image/png;base64,@item.AvatarBase64" alt="Avatar" class="avatar" width="10%">
								</td>
								<td>@item.StID</td>
								<td>@item.FullName</td>
								<td>@(item.DoB.HasValue ? item.DoB.Value.ToShortDateString() : string.Empty)</td>
								<td>@item.Email</td>
								<td>@item.PhoneNumber</td>
								<td>
									
									
											<input type="checkbox" >
									
								</td>



							</tr>
						}


					</tbody>
				</table>
			</div>
		</div>
	</div>
