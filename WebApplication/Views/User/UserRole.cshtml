@model IEnumerable<WebApplication.Models.UserRoleView>

@{
	ViewBag.Title = "UserRole";
	Layout = "~/Views/Shared/_LayoutTable.cshtml";
	int i = 1;
}

<div class="col-md-12 col-sm-12 col-xs-12">
	<div class="x_panel">
		<div class="x_title">
			<div class="row">
				<h2>Group Detail</h2>
			</div>
			<div class="row">
				<a href="~/User/CreateNewRole">
					<button type="button" class="btn btn-default">
						Assign
					</button>
				</a>
			</div>
			<div class="clearfix"></div>
		</div>
		<div class="x_content">
			<table id="datatable-buttons" class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>#</th>
						<th>Avatar</th>
						<th>Full Name</th>
						<th>Emai</th>
						<th>Role</th>
					</tr>
				</thead>

				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@(i++)</td>
							<td>
								<img src="data:image/png;base64,@item.Avatar" alt="Avatar" class="avatar" width="10%">
							</td>
							<td>@item.FullName</td>
							<td>@item.Email</td>
							<td style="text-align:center">
								@if (item.Role == "Admin")
								{
									<i class="btn btn-danger" style="width:80px">@item.Role</i>
								}
								else if (item.Role == "GV")
								{
									<i class="btn btn-warning" style="width:80px">@item.Role</i>
								}
								else
								{
									<i class="btn btn-success" style="width:80px">@item.Role</i>
								}
							</td>
						</tr>
					}

				</tbody>
			</table>
		</div>
	</div>
</div>
